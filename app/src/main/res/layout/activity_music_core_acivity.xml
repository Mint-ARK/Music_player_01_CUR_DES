<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Music_core_Acivity"
    android:orientation="vertical"
    android:background="#BFEFD6E5">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F2DEEA"
        app:titleTextColor="@color/white"
        app:title="注册"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:text="先放一串字在这里"
        android:layout_gravity="center"
        android:id="@+id/bofangyemianwenben"
        android:gravity="center"
        android:textSize="20sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="这是歌手名哦"
        android:layout_gravity="center"
        android:id="@+id/artist"
        android:gravity="center"
        android:textSize="10sp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:id="@+id/bofangyemiantupian"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:src="@drawable/v2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120sp">
        <TextView
            android:id="@+id/timer_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="00:00"
            android:textColor="#94BFDC"/>

        <TextView
            android:id="@+id/timer_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="00:00"
            android:textColor="#94BFDC"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="310dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_loop_24"/>
        <ImageView
            android:id="@+id/previous"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_skip_previous_24"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/pause"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_pause_24" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_skip_next_24_balck"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_format_list_bulleted_24"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>